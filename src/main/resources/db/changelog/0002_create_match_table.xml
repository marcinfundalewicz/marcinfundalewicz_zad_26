<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">
    <changeSet id="0001-1" author="javastart">
        <createTable tableName="match">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="teama" type="VARCHAR(100)"/>
            <column name="teamb" type="VARCHAR(100)"/>
            <column name="date" type="date"/>
            <column name="bet_closed" type="boolean"/>
            <column name="match_details_id" type="bigint"/>
            <column name="winner" type="VARCHAR(100)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>